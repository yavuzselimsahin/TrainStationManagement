@model TrainStationManagement.Models.Train

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Train</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="TrainId" />
            <div class="form-group">
                <label asp-for="DepartureStationId" class="control-label"></label>
                <select asp-for="DepartureStationId" class="form-control" asp-items="ViewBag.DepartureStationId"></select>
                <span asp-validation-for="DepartureStationId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ArrivalStationId" class="control-label"></label>
                <select asp-for="ArrivalStationId" class="form-control" asp-items="ViewBag.ArrivalStationId"></select>
                <span asp-validation-for="ArrivalStationId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DepartureTime" class="control-label"></label>
                <input asp-for="DepartureTime" class="form-control" />
                <span asp-validation-for="DepartureTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ArrivalTime" class="control-label"></label>
                <input asp-for="ArrivalTime" class="form-control" />
                <span asp-validation-for="ArrivalTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
