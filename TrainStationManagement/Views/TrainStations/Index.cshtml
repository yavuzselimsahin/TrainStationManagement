@model IEnumerable<TrainStationManagement.Models.TrainStation>

@{
    ViewData["Title"] = "Index";
}

<h1>Train Stations</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table table-hover table-striped table-light">
    <thead class="custom-thead">
        <tr>
            <th>
                Station Name
            </th>
            <th>
                Station Adress
            </th>
            <th>
                Station Location
            </th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.StationName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StationAddress)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StationLocation)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.StationId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.StationId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.StationId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
